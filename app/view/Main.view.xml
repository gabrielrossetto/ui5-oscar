<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="oscar.challenge.controller.Main">
  <App>
    <Page title="Oscar Winners">
      <content>
        <SearchField placeholder="Search..." liveChange="onSearch" />
        <Table id="winnersTable" items="{winners>/Awards}">
          <columns>
            <Column>
              <Text text="Name" />
            </Column>
            <Column>
              <Text text="Movie" />
            </Column>
            <Column>
              <Text text="Category" />
            </Column>
            <Column>
              <Text text="Year" />
            </Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <Text text="{winners>actor_ID}" />
                <Text text="{winners>film_ID}" />
                <Text text="{winners>category_ID}" />
                <Text text="{winners>year}" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>
        <Button text="Add New Award" press="onAddAward" />
      </content>
    </Page>
  </App>
</mvc:View>