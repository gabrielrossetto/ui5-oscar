<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="oscar.challenge.controller.Main">
  <App>
    <Page title="Oscar Actors Winners List">
      <customHeader>
        <Bar design="Header" class="customBar">
          <contentLeft>
            <Title text="Oscar Actors Winners List" />
          </contentLeft>
          <contentRight>
            <SearchField placeholder="Search" liveChange="onSearch" width="400px" />
            <Button text="New Award" icon="sap-icon://add" press="onAddAward" type="Emphasized" />
          </contentRight>
        </Bar>
      </customHeader>

      <content>
        <Table id="winnersTable" items="{winnersDetailed>/Awards}">
          <columns>
            <Column>
              <Text text="Actor" />
            </Column>
            <Column>
              <Text text="Movie" />
            </Column>
            <Column>
              <Text text="Award Category" />
            </Column>
            <Column>
              <Text text="Award Year" />
            </Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <Text text="{winnersDetailed>actorName}" />
                <Text text="{winnersDetailed>filmTitle}" />
                <Text text="{winnersDetailed>categoryName}" />
                <Text text="{winnersDetailed>year}" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>
      </content>
    </Page>
  </App>
</mvc:View>