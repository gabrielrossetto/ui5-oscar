<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="oscar.challenge.controller.Main">
  <App id="app">
    <Page title="{i18n>appTitle}">
      <customHeader>
        <Bar design="Header" class="customBar">
          <contentLeft>
            <Title text="{i18n>appTitle}" class="headerTitle" />
          </contentLeft>
          <contentRight>
            <SearchField placeholder="{i18n>searchPlaceholder}" liveChange="onSearch" width="400px" />
            <Button text="{i18n>newAward}" icon="sap-icon://add" press="onAddAward"
              type="Emphasized" />
          </contentRight>
        </Bar>
      </customHeader>

      <content>
        <Table id="winnersTable"
          items="{winnersDetailed>/Awards}"
          alternateRowColors="false"
          backgroundDesign="Transparent">
          <columns>
            <Column>
              <Text text="{i18n>columnActor}" />
            </Column>
            <Column>
              <Text text="{i18n>columnMovie}" />
            </Column>
            <Column>
              <Text text="{i18n>columnAwardCategory}" />
            </Column>
            <Column>
              <Text text="{i18n>columnAwardYear}" />
            </Column>
          </columns>
          <items>
            <ColumnListItem type="Active" press="onAwardPress">
              <cells>
                <Text text="{winnersDetailed>actorName}" />
                <Text text="{winnersDetailed>filmTitle}" />
                <Text text="{winnersDetailed>categoryName}" />
                <Text text="{winnersDetailed>year}" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>
      </content>
    </Page>
  </App>
</mvc:View>